#!/bin/bash

set -e
set -o pipefail

if [ -f version ]
then
	ver="$(cat version)"
elif [ -d .git ]
then
	mod=$([ -z "$(git status -suno)" ] || echo "+")
	tag="$(git describe --always --tags)"
	ver="$(echo "$tag" | sed 's/^v//')$mod"
else
	ver=""
fi

if [ $# = 0 ]
then
	echo "$ver"
	exit
fi

if [ x"$1" = x--check ]
then
	check=1
	shift
fi

[ $# = 1 ]
f="$1"

src=$(echo "#include "'"'"psgplay/version.h"'"'"

const char *psgplay_version(void) { return "'"'"$ver"'"'"; }")

if [ ! -f "$f" ] || ! echo "$src" | cmp --quiet - "$f"
then
	if [ x"$check" = x1 ]
	then
		echo "$f"
	else
		echo "$src" >"$f".tmp
		mv "$f".tmp "$f"
	fi
else
	:
fi
